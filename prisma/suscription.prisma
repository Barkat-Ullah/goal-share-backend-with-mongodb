model Subscription {
    id               String           @id @default(auto()) @map("_id") @db.ObjectId
    title            String
    price            Float
    duration         Int
    subscriptionType SubscriptionType

    user    User[]
    payment Payment[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("subscription")
}

enum SubscriptionType {
    FREE
    MONTHLY
    YEARLY
}

